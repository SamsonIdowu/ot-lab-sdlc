pipeline {
    agent any

    tools {
        // Install the Maven version configured as "Maven Install" and add it to the path.
        maven "Maven3"
    }

    stages {
        stage('Static Code Analysis') {
            steps {
                sh "cd /home/samson/jenkins_agent/workspace/job1 && \
                    mvn pmd:pmd && \
                    mvn checkstyle:checkstyle && \
                    mvn findbugs:findbugs"
            }

            post {
                always {
                    recordIssues(
                        tools: ["checkstyle", "pmd", "findbugs"],
                        useRankAsPriority: true
                    )
                }
            }
        }
    }
}
